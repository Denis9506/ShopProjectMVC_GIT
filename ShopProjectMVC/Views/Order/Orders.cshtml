@model IEnumerable<ShopProjectMVC.Core.Models.Order>

@{
    ViewData["Title"] = "User Orders";
}

<h2>User Orders</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User Name</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                <td>@order.Id</td>
                <td>@order.User.Name</td>
                <td>@(order.Product?.Name ?? "Unknown")</td>
                <td>@(order.Product?.Price ?? 0.00)</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
               @*  <td>
                    <a asp-action="Edit" asp-route-id="@order.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@order.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@order.Id">Delete</a>
                </td>     *@
            </tr>
            }
        </tbody>
    </table>
